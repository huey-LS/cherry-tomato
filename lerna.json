{
  "lerna": "3.19.0",
  "version": "independent",
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "npmClientArgs": [
    "--no-package-lock",
    "--registry=https://registry.npm.taobao.org",
    "--disturl=https://npm.taobao.org/dist"
  ],
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "ignored-file"],
      "message": "chore(release): publish %s"
    }
  }
}
